<layer-list>
    <item>
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">

            <corners android:radius="5dp" /><!-- 圆角半径 -->

            <stroke
                android:width="1dp"
                android:color="#a2aec8" /><!--矩形的边线  -->

            <solid
                android:color="#a2aec8"/>
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
            <size
                android:width="48dp"
                android:height="48dp"/>
        </shape>
    </item>
</layer-list>